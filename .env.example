# Supabase Environment Variables
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# StreamElements Integration (for frontend - auto-connecting Twitch users)
VITE_SE_CHANNEL_ID=your_streamelements_channel_id
VITE_SE_JWT_TOKEN=your_streamelements_jwt_token

# StreamElements Integration (for backend API - awarding points)
# These are used by the serverless functions in /api folder
STREAMELEMENTS_CHANNEL_ID=your_streamelements_channel_id
STREAMELEMENTS_JWT_TOKEN=your_streamelements_jwt_token
# Supabase Service Role Key (for backend API functions)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Twitch API (for Raid Shoutout widget - clip fetching)
# Create an app at https://dev.twitch.tv/console to get these
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Raid Shoutout Webhook Security (optional, but recommended)
# Set this to a random string and use it in your SE/Nightbot webhook URL
SHOUTOUT_WEBHOOK_SECRET=your_random_secret_here

# Overlay Domain (for Twitch clip embeds parent parameter)
# Set to your deployed domain without protocol (e.g., "yoursite.vercel.app")
OVERLAY_DOMAIN=localhost